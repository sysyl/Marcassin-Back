<Window x:Class="Marcassin.Views.Erreur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marcassin.Views"
        mc:Ignorable="d"
        Title="Erreur" Height="150" Width="500" Background="#FFDDDDDD">
    <Grid>
        <Label Name="Message" HorizontalAlignment="Center" VerticalAlignment="Top" Width="auto" Height="auto" Margin="10" FontSize="15" FontWeight="Bold" Grid.ColumnSpan="2" Foreground="Red"/>
        <Button Name="Btn_ok" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="10" Click="Btn_ok_Click"/>
    </Grid>
</Window>
